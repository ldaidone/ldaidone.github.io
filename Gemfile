source "https://rubygems.org"

# Gemas que Jekyll necesita para el core
gem "jekyll"

# Las gemas que tu entorno moderno de Ruby 3.4 necesita
gem "csv"
gem "bigdecimal"
gem "webrick", "~> 1.7" # Necesario para Ruby >= 3
gem "minima", "~> 2.5" # Theme predeterminado, puedes cambiarlo si es necesario
gem "jekyll-feed", "~> 0.12" # Genera feeds RSS
gem "jekyll-sitemap", "~> 1.4" # Genera un sitemap
gem "jekyll-seo-tag", "~> 2.7" # Mejora el SEO

# Themes
gem "beautiful-jekyll-theme", "6.0.1"
gem "jekyll-agency"
gem "agency-jekyll-theme"


# La gema que replica el entorno de compilación de GitHub Pages
# Mantenemos esta, pero sin la restricción de versión
group :jekyll_plugins do
  gem "github-pages"
end

# Si tu sitio usa feeds, descomenta esta línea:
# gem "jekyll-feed", "~> 0.12"
